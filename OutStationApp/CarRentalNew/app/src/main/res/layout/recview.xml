<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="6dp"
    android:backgroundTint="@color/bg_color_selector"
    android:background="@drawable/cardview_border">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:layout_marginRight="16dp"
            android:id="@+id/car_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/jaguar"
            android:layout_centerVertical="true"
            android:backgroundTint="#ffffff"
            android:background="@drawable/cardview_border"/>
        <!-- android:background="@drawable/textview_border"-->


        <TextView
            android:maxLines="2"
            android:layout_margin="2dp"
            android:textColor="@color/text_color_selector"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_toEndOf="@id/car_image"
            android:layout_toStartOf="@+id/type"
            android:fontFamily="sans-serif"
            android:text="Jaguar"
            android:textSize="18sp"/>

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/seater"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/name"
            android:layout_alignStart="@+id/name"
            android:layout_alignEnd="@id/name"
            android:text="2 Seater"
            android:textColor="#A9A9A9"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/seater"
            android:layout_alignBottom="@id/car_image"
            android:layout_toEndOf="@+id/car_image"
            android:textColor="@color/text_color_selector"
            android:text="Ratings:4"
            android:textSize="17dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ratingsLL"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@id/seater"
            android:layout_alignStart="@+id/seater">

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/ratingsLL"
            android:layout_height="wrap_content"
            android:text="20Rs./Km"
            android:textSize="17dp"
            android:textColor="@color/text_color_selector"
            android:id="@+id/rate_name"/>
        <TextView
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/type"
            android:text="SUV"
            android:textColor="#ffffff"
            android:padding="4dp"
            android:backgroundTint="#43a047"
            android:background="@drawable/cardview_border"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
